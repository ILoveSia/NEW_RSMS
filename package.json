{
  "name": "rsms-project",
  "version": "1.0.0",
  "description": "책무구조도 시스템 - 통합 개발 환경",
  "private": true,
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && ./gradlew build",
    "dev": "./start-dev.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && ./gradlew bootRun",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && ./gradlew build",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && ./gradlew checkstyleMain checkstyleTest",
    "format": "npm run format:frontend",
    "format:frontend": "cd frontend && npm run format",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && ./gradlew test",
    "style:check": "npm run lint && npm run format:check",
    "style:fix": "npm run lint && npm run format",
    "format:check": "cd frontend && npm run format:check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && npm run lint -- --fix",
      "cd frontend && npm run format"
    ],
    "backend/**/*.java": [
      "cd backend && ./gradlew checkstyleMain checkstyleTest"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}